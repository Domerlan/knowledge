[Unit]
Description=BDM Celery Beat
After=network.target

[Service]
Type=simple
User=bdm
Group=bdm
WorkingDirectory=/opt/bdm-knowledge/backend
EnvironmentFile=/etc/bdm/bdm.env
ExecStart=/opt/bdm-knowledge/backend/.venv/bin/celery -A app.celery_app beat --loglevel=INFO
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
